<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomViewEx">

<com.example.cse225_part2.CustomTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:settitle="Custom Text Message"
    app:setColor="true"
    app:allCapitals="true"
    app:maxLength="15"
    android:layout_marginTop="200dp"
    android:layout_marginLeft="120dp"
    android:textStyle="bold"
    android:textSize="18dp"/>

    <com.example.cse225_part2.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingStart="20dp"
        app:setColor1="true"
        app:setHint="Enter Your text"
        app:allCapsEdit="true"
        android:textSize="20dp"/>

</LinearLayout>